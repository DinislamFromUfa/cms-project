<Window x:Class="cms_project.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cms_project"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Логин: "/>
            <TextBox Name="AdminName"></TextBox>
            <Label Content="Пароль: "/>
            <PasswordBox Name="AdminPassword"></PasswordBox>
            <Button Content="Вход" Click="btnLogin_click"></Button>
        </StackPanel>
    </Grid>
</Window>
