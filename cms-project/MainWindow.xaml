<Window x:Class="cms_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cms_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="Панель администратора" x:Name="PanelAdministration" Click="PanelAdministration_Click"></Button>
            <Button Content="Управление контентом" x:Name="ContentManagement" Click="ContentManagement_Click"></Button>
            <Button Content="Статистика" x:Name="Statistics" Click="Statistics_Click"></Button>
            <Button Content="Рассылки" x:Name="Mailings" Click="Mailings_Click"></Button>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="Pages"/>
    </Grid>
</Window>
